datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id String @id 
  username String @unique
}

model Department {
   id Int @id @default(autoincrement())
   name String @unique
   lecturers Lecturer[]
   students Student[]
   subjects Subject[]
}

model Hall{
  id Int @id @default(autoincrement())
  name String @unique
  lectureRooms LectureRoom[]

}

model LectureRoom {
  id Int @id @default(autoincrement())
  name String
  maxCapacity Int

  hallId Int
  hall Hall @relation(fields: [hallId], references: [id])

  reservations Reservation[]
}

model Student{
  id String @id
  username String @unique
  name String
  surname String
  email String? @unique
  phone String? @unique
  address String
  bloodType String
  sex UserSex
  createdAt DateTime @default(now())
  birthday DateTime
  subjects Subject[]

  departmentId Int
  department Department @relation(fields: [departmentId], references: [id])
}

model Lecturer{
  id String @id
  username String @unique
  name String
  surname String
  email String? @unique
  phone String @unique
  address String
  bloodType String
  sex UserSex
  createdAt DateTime @default(now())
  subjects Subject[]
  reservations Reservation[]
  birthday DateTime

  departmentId Int
  department Department @relation(fields: [departmentId], references: [id])
}

model Subject{
  id Int @id @default(autoincrement())
  code String @unique
  name String @unique
  lecturers Lecturer[]
  students Student[]
  reservations Reservation[]

  departmentId Int
  department Department @relation(fields: [departmentId], references: [id])
}

model Reservation {
  id Int @id @default(autoincrement())
  startTime DateTime
  endTime DateTime
  createdAt DateTime @default(now())

  lecRoomId Int
  lectureRoom LectureRoom @relation(fields: [lecRoomId], references: [id])

  lecturerId String
  lecturer Lecturer @relation(fields: [lecturerId], references: [id])

  subjectId Int
  subject Subject @relation(fields: [subjectId], references: [id])
}

enum UserSex {
  MALE
  FEMALE
}

